@model SistemaTickets.Models.Rol

@{
    ViewBag.Title = "Registrar Rol";
}

<h3>Registrar Rol</h3>
<hr />

@using (Html.BeginForm("Registrar", "Roles", FormMethod.Post)) {
    <div class="row">
        <div class="col-2">
            <div class="mb-3">
                @Html.LabelFor(rol => rol.Nombre)
                @Html.TextBoxFor(rol => rol.Nombre, "", (new { @class = "form-control" }))
            </div>
            <div class="mb-3 d-grid">
                <input type="submit" class="btn btn-primary" value="Registrar" />
            </div>
        </div>
        <div class="col-10"></div>
    </div>
}